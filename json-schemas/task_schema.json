{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Task",
    "type": "object",
    "properties": {
      "comments": {
        "type": ["string", "null"],
        "description": "Comments on the task."
      },
      "description": {
        "type": "string",
        "description": "A description of the task."
      },
      "issueID": {
        "type": ["string", "null"],
        "description": "The issue ID associated with the task."
      },
      "priority": {
        "type": "string",
        "description": "The priority level of the task."
      },
      "story_point": {
        "type": "number",
        "description": "The story points assigned to the task."
      }
    },
    "required": ["description", "priority", "story_point"]
  }
  